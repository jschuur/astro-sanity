---
import SiteLayout from "../layouts/SiteLayout.astro";

import RecentBlogPosts from "../components/blog/RecentBlogPosts.astro";
import Hero from "../components/homepage/Hero.astro";

import { getHomePage } from "../cms/queries";

const homePage = await getHomePage();
const { heroTitle, heroSubtitle, heroText, heroAvatar } = homePage;

export const prerender = true;
---

<SiteLayout>
  <Hero
    heroTitle={heroTitle}
    heroSubtitle={heroSubtitle}
    heroText={heroText}
    heroAvatar={heroAvatar}
  />
  <RecentBlogPosts />
</SiteLayout>
