---
import type { FileAsset, PortableTextBlock } from "@sanity/types";

import Block from "../Block.astro";

type Props = {
  heroTitle: string;
  heroSubtitle: string;
  heroText: PortableTextBlock[];
  heroAvatar: FileAsset;
};

const { heroTitle, heroSubtitle, heroText, heroAvatar } = Astro.props;
---

<section class="mb-16">
  <div class="flex flex-col sm:flex-row gap-2 sm:gap-4 items-center mb-4">
    <img
      src="/images/joost.jpg"
      alt="Joost"
      class="shadow-lg rounded-full w-40 sm:w-32 object-fill order-2 sm:order-1"
    />
    <div class="order-1 sm:order-2">
      <h1
        class="font-extrabold text-4xl sm:text-5xl tracking-tight pt-4 pb-2 overflow-hidden"
      >
        <span
          class="bg-gradient-to-br from-primary-400 via-primary-500 to-primary-600 dark:from-primary-main dark:via-primary-main dark:to-primary-main bg-clip-text text-transparent"
        >
          {heroTitle}
        </span>
      </h1>
      <p class="text-xl sm:text-2xl">
        {heroSubtitle}
      </p>
    </div>
  </div>
  <div>
    <Block value={heroText} />
  </div>
</section>
