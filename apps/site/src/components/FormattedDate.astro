---
type Props = {
	date: Date | string;
}

const { date: dateParam } = Astro.props;
const date = typeof dateParam === "string" ? new Date(dateParam) : dateParam;

---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
